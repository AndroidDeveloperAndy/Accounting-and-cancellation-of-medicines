<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/light_yellow"
    tools:context="com.example.andy.accountingandcancellationofmedicines.OutAllMedicineActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_medicine"
        android:id="@+id/TitleAllMedicine"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:typeface="monospace"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textStyle="normal|bold|italic" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/listAllMedicine"

        android:textStyle="bold|italic"
        android:layout_below="@+id/TitleAllMedicine"

        android:choiceMode="multipleChoice"
        android:background="@color/light_yellow"
        android:layout_alignParentEnd="true"
        style="@android:style/Widget.DeviceDefault.Light.ListView"
        android:layout_weight="3.91" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:text="@string/delete"
        android:id="@+id/DeleteButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <Button
        android:text="@string/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonEditMedicine"
        android:layout_alignTop="@+id/DeleteButton"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:layout_gravity="center" />
</RelativeLayout>
