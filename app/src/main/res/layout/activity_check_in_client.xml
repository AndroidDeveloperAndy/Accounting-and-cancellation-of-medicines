<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/light_yellow"
    tools:context="com.example.andy.accountingandcancellationofmedicines.CheckInClientActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/form_registration"
        android:id="@+id/form_registration"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="@string/prompt_login"
        android:textStyle="bold|italic"
        android:id="@+id/login_checkIN"
        android:layout_below="@+id/form_registration"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/name_client"
        android:layout_below="@+id/surname_client"
        android:layout_alignParentStart="true"
        android:hint="@string/your_name"
        android:textStyle="bold|italic"
        android:inputType="textPersonName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="@string/prompt_password"
        android:id="@+id/password_client"
        android:layout_below="@+id/login_checkIN"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/surname_client"
        android:hint="@string/surname"
        android:textStyle="bold|italic"
        android:inputType="text"
        android:layout_below="@+id/password_client"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/patronymic_client"
        android:layout_below="@+id/name_client"
        android:layout_alignParentStart="true"
        android:inputType="text"
        android:hint="@string/patronymic" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_in"
        android:id="@+id/check_in_button_form"
        android:textStyle="bold|italic"
        android:textColor="@color/white"
        android:layout_below="@+id/patronymic_client"
        android:layout_centerHorizontal="true"
        android:textSize="10sp" />
</RelativeLayout>
