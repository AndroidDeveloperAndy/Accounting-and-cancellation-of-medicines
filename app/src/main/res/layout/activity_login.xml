<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/light_yellow"
    tools:context="com.example.andy.accountingandcancellationofmedicines.views.implementation.LoginActivity"
    android:orientation="vertical">

    <!-- Login progress -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="256dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/welcome" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="303dp"
        android:background="@color/light_yellow">

        <LinearLayout
            android:id="@+id/password_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimary"
                android:textAlignment="center"
                style="@style/Widget.Design.TextInputLayout">

                <AutoCompleteTextView
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_login"
                    android:textStyle="normal|bold|italic"
                    android:inputType="text|textEmailAddress"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimary"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:fontFamily="casual"
                    style="@android:style/Widget.DeviceDefault.Light.AutoCompleteTextView"
                    tools:style="@android:style/Widget.Holo.AutoCompleteTextView" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColorHint="@color/colorPrimary"
                android:textAlignment="center"
                style="@style/Widget.Design.TextInputLayout">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_password"
                    android:textStyle="normal|bold|italic"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:textAlignment="center"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimary"
                    android:singleLine="true"
                    style="@android:style/Widget.DeviceDefault.AutoCompleteTextView"
                    android:textAllCaps="false"
                    android:fontFamily="casual" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/sign_in_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/action_sign_in"
                android:textStyle="bold|italic"
                android:textSize="10sp"
                android:layout_gravity="top|left|bottom|right"
                android:textColor="@color/white"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"
                    android:text="@string/check_in"
                    android:textStyle="bold|italic"
                    android:textSize="10sp"
                    android:id="@+id/registration"
                    android:layout_gravity="left"
                    android:textColor="@color/colorPrimary" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/restore"
                    android:textStyle="bold|italic"
                    android:textSize="10sp"
                    android:id="@+id/restore_password"
                    android:layout_gravity="right"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/login_progress"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        tools:visibility="gone"
        android:indeterminate="false" />

</LinearLayout>
