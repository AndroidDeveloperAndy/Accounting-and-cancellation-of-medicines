<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andy.accountingandcancellationofmedicines.StartPageActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:id="@+id/scrollView"
        android:layout_gravity="right"
        android:layout_weight="0.95"
        android:layout_above="@+id/relativeLayout"
        android:layout_below="@+id/relativeLayout2">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listViewMedicine"
            android:textStyle="bold|italic"
            android:layout_alignParentStart="true"
            android:choiceMode="multipleChoice" />
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:text="Add Medicine"
            android:id="@+id/buttonAdd"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:text="Out all medicine"
            android:id="@+id/buttonOut"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/buttonAdd" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerCountry"
            android:layout_toEndOf="@+id/editTextSearchMedicine" />

        <Spinner
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerDistrict"
            android:layout_gravity="right"
            android:textStyle="bold|italic"
            android:spinnerMode="dropdown"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/editTextSearchMedicine"
            android:layout_alignParentBottom="true" />

        <EditText
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextSearchMedicine"
            android:textStyle="bold|italic"
            android:hint="Enter the name of the tablets"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>
