<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andy.accountingandcancellationofmedicines.AddMedicineActivity" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_medicine"
        android:id="@+id/Title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNameMedicine"
        android:hint="@string/name_medicine"
        android:layout_below="@+id/Title"
        android:layout_alignParentStart="true" />

    <Spinner
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerCityAdd"
        android:spinnerMode="dropdown"
        android:layout_alignTop="@+id/editTextNameMedicine"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView3" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNote"
        android:layout_below="@+id/editTextNameMedicine"
        android:layout_alignParentStart="true"
        android:hint="@string/note" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editTextAD"
        android:layout_below="@+id/editTextNote"
        android:hint="@string/arrival_date"
        android:layout_alignEnd="@+id/Amount" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Amount"
        android:layout_below="@+id/editTextAD"
        android:hint="@string/amount"
        android:layout_alignEnd="@+id/shelfLife" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/shelfLife"
        android:layout_below="@+id/DateOfManufacture"
        android:hint="@string/shelf_life"
        android:layout_toStartOf="@+id/Title" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/code_country"
        android:hint="@string/code_country"
        android:layout_below="@+id/adress"
        android:layout_toEndOf="@+id/DateOfManufacture" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/code_phone"
        android:hint="@string/code_phone"
        android:layout_below="@+id/code_country"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/DateOfManufacture" />

    <Spinner
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MeasurAmount"
        android:layout_alignTop="@+id/Amount"
        android:layout_toEndOf="@+id/editTextNameMedicine"
        android:spinnerMode="dropdown" />

    <TextView
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adding"
        android:id="@+id/textView3"
        android:layout_below="@+id/price_one"
        android:layout_centerHorizontal="true" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/departure_date"
        android:hint="@string/departure_date"
        android:layout_below="@+id/DateOfManufacture"
        android:layout_alignParentEnd="true" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/price_one"
        android:hint="@string/price_one"
        android:layout_below="@+id/shelfLife"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:id="@+id/listShops"
            android:choiceMode="multipleChoice"
            tools:listitem="@android:layout/simple_list_item_checked"
            style="@style/Widget.AppCompat.Light.ListView.DropDown"
            android:headerDividersEnabled="false"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true" />

        <Button
            android:textStyle="bold|italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_medicine"
            android:id="@+id/add_medicine_pageAdd"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/adress" />

    </LinearLayout>

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adress"
        android:hint="@string/adress"
        android:layout_marginStart="12dp"
        android:layout_above="@+id/editTextAD"
        android:layout_toEndOf="@+id/Title" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/DateOfManufacture"
        android:hint="@string/date_manufacture"
        android:layout_below="@+id/Amount"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SpinnerCountryAdd"
        android:layout_below="@+id/Title"
        android:layout_alignStart="@+id/Title"
        android:layout_toStartOf="@+id/spinnerCityAdd" />

</RelativeLayout>
</ScrollView>