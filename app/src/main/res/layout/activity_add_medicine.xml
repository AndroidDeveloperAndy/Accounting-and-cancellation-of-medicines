<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andy.accountingandcancellationofmedicines.AddMedicineActivity" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add medicine"
        android:id="@+id/Title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNameMedicine"
        android:hint="Name medicine"
        android:layout_below="@+id/Title"
        android:layout_alignParentStart="true" />

    <Spinner
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerDistrict"
        android:spinnerMode="dropdown"
        android:layout_alignTop="@+id/editTextNameMedicine"
        android:layout_alignEnd="@+id/code_country"
        android:layout_marginEnd="41dp" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNote"
        android:layout_below="@+id/editTextNameMedicine"
        android:layout_alignParentStart="true"
        android:hint="Note" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editTextAD"
        android:layout_below="@+id/editTextNote"
        android:hint="Arrival date"
        android:layout_alignEnd="@+id/Amount" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Amount"
        android:layout_below="@+id/editTextAD"
        android:hint="Amount"
        android:layout_alignEnd="@+id/shelfLife" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/DateOfManufacture"
        android:layout_below="@+id/Amount"
        android:layout_alignParentStart="true"
        android:hint="Date of Manufacture" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/shelfLife"
        android:layout_below="@+id/DateOfManufacture"
        android:hint="Shelf life"
        android:layout_toStartOf="@+id/Title" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/country"
        android:hint="Country"
        android:layout_below="@+id/editTextNameMedicine"
        android:layout_toEndOf="@+id/MeasurAmount" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/city"
        android:hint="City"
        android:layout_below="@+id/country"
        android:layout_alignStart="@+id/country" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adress"
        android:hint="Adress"
        android:layout_below="@+id/city"
        android:layout_toEndOf="@+id/Title" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/departure_date"
        android:hint="Departure date"
        android:layout_below="@+id/shelfLife"
        android:layout_alignEnd="@+id/Title" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/price_one"
        android:layout_below="@+id/departure_date"
        android:layout_alignEnd="@+id/departure_date"
        android:hint="Price one" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/code_country"
        android:hint="Code country"
        android:layout_below="@+id/adress"
        android:layout_toEndOf="@+id/DateOfManufacture" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/code_phone"
        android:hint="Code phone"
        android:layout_below="@+id/code_country"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/DateOfManufacture" />

    <Spinner
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MeasurAmount"
        android:layout_alignTop="@+id/Amount"
        android:layout_toEndOf="@+id/editTextNameMedicine"
        android:spinnerMode="dropdown" />

    <TextView
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adding medicines to shop"
        android:id="@+id/textView3"
        android:layout_below="@+id/price_one"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:id="@+id/relativeLayout4">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listShops"
            android:choiceMode="multipleChoice"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            tools:listitem="@android:layout/simple_list_item_checked" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout4"
        android:layout_alignStart="@+id/price_one">

    </RelativeLayout>

    <Button
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add medicine"
        android:id="@+id/add_medicine_pageAdd"
        android:layout_below="@+id/relativeLayout4"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp" />

</RelativeLayout>
</ScrollView>