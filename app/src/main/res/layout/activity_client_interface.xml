<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andy.accountingandcancellationofmedicines.ClientInterfaceActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/find_client_medicine"
        android:hint="Find medicine"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/client_district"
        android:spinnerMode="dropdown"
        android:textStyle="bold|italic"
        android:layout_alignTop="@+id/find_client_medicine"
        android:layout_toEndOf="@+id/find_client_medicine" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/client_city"
        android:spinnerMode="dropdown"
        android:textStyle="bold|italic"
        android:layout_alignTop="@+id/client_district"
        android:layout_toEndOf="@+id/client_district"
        android:layout_marginStart="37dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/find_client_medicine"
        android:layout_alignParentEnd="true"
        android:id="@+id/relativeLayout3">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:textStyle="bold|italic"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:choiceMode="singleChoice"
            tools:listitem="@android:layout/simple_list_item_checked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order"
            android:textStyle="bold|italic"
            android:id="@+id/OrderButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textStyle="bold|italic"
        android:id="@+id/SearchButton"
        android:layout_above="@+id/relativeLayout3"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
