<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andy.accountingandcancellationofmedicines">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".utils.MyApllication"
        android:allowBackup="true"
        android:configChanges="locale"
        android:enabled="true"
        android:icon="@drawable/medicine_ic"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".settings.Preferences"></activity>
        <activity
            android:name=".views.implementation.LoginActivity_"
            android:configChanges="locale"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.implementation.StartPageActivity_"
            android:configChanges="locale">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".views.implementation.AddMedicineActivity_" />
        <activity android:name=".views.implementation.OutAllMedicineActivity_" />
        <activity android:name=".views.implementation.CheckInClientActivity_" />
        <activity
            android:name=".views.implementation.ClientActivity_"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>